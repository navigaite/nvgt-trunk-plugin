{
  "categories": [
    {
      "title": "## 🌟 Features & Enhancements",
      "labels": ["feature", "enhancement", "feat"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🧪 Testing",
      "labels": ["test"]
    },
    {
      "title": "## 🚀 Performance Improvements",
      "labels": ["performance", "perf"]
    },
    {
      "title": "## 🏗️ Build System",
      "labels": ["build", "ci", "cd"]
    },
    {
      "title": "## ♻️ Refactoring",
      "labels": ["refactor"]
    },
    {
      "title": "## 🧰 Maintenance",
      "labels": ["chore", "dependencies"]
    },
    {
      "title": "## 🌐 Translations",
      "labels": ["i18n", "translation"]
    }
  ],
  "ignore_labels": ["duplicate", "question", "invalid", "wontfix", "skip-changelog"],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No changes in this category",
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "transformers": [
    {
      "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+?)\n(.+?[\\-\\*] )(.+)",
      "target": "- $4\n  - $6"
    }
  ],
  "trim_values": true,
  "exclude_merge_branches": ["Owner/qa"]
}
